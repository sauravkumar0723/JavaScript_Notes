// current context ko refer krte hai tb this keyword ka use krte hai 


const user = {
    username: "saurav",
    price: 999,

    welcomeMessage: function() {
        console.log(`${this.username}, welcome to website`);
        // console.log(this); // print all object 
    }
}

user.welcomeMessage()
user.username ="sam"
user.welcomeMessage()

console.log(this); // {} empty object 
// note:- inside browser the objec present is global object 



